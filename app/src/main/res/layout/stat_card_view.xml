<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_height="@dimen/stat_card_height"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/stat_card_marginX"
    android:layout_marginEnd="@dimen/stat_card_marginX"
    android:layout_marginTop="@dimen/stat_card_marginY"
    android:padding="30dp"
    card_view:cardBackgroundColor="?attr/dialogBackground"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:id="@+id/card_view_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view_title"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="?android:attr/textColor"
            android:textSize="18sp"/>


    </LinearLayout>


    </android.support.v7.widget.CardView>